---
layout: layouts/base.njk
title: Projects - Matt Obee
---
<div class="container readable">
    <h1>Projects</h1>
    <ul class="projects">
        {% for project in collections.project | reverse %}
        {% if project.data.casestudy %}
        <li class="project project--casestudy">
            <h2 class="project__name">{{ project.data.title }}</h2>
            <span class="project__client">for {{ project.data.client }}</span>
            <p class="project__description">{{ project.data.description }}</p>
            <a class="project__casestudy" href="/">Read the case study <i class="fa-solid fa-arrow-right"></i></a>
        </li>
        {% else %}
        <li class="project">
            <h2 class="project__name">{{ project.data.title }}</h2>
            <span class="project__client">for {{ project.data.client }}</span>
            <p class="project__description">{{ project.data.description }}</p>
        </li>
        {% endif %}
        {% endfor %}
    </ul>
</div>
<section id="experience" class="section">
    <div class="container">

    </div>
</section>
