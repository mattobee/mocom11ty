---
layout: layouts/default.njk
title: Notes
summary: A collection of incomplete thoughts and ideas.
---

{% set maturityTitles = {
  'seedling': 'Seedling',
  'budding': 'Budding',
  'evergreen': 'Evergreen'
} %}

<div class="container">

  <ul role="list" class="flow">
    {% for note in collections.sortedNotes %}
      <li>
        <article itemscope itemtype="https://schema.org/BlogPosting">
          <h2 itemprop="name"><a itemprop="url" class="undecorated" href="/notes/{{ note.slug }}">{{ note.title }}</a></h2>
          <span class="note__status muted"><span itemprop="creativeWorkStatus">{{ maturityTitles[note.maturity] }}</span> &middot; Updated <sl-relative-time date="{{ note._updatedAt }}"></sl-relative-time></span>
        </article>
      </li>
    {% endfor %}
  </ul>

</div>
<!-- End container -->